<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.realsoft.gopro.GoProActivity$PlaceholderFragment">

    <TextView
        android:id="@+id/goProStatusText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/camera_status" />


    <ToggleButton
        android:id="@+id/btnPower"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/goProStatusText"
        android:textOff="Turn on"
        android:textOn="Turn off" />

    <ToggleButton
        android:id="@+id/btnRecord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnPower"
        android:textOff="Start recording"
        android:textOn="Stop recording" />

    <TextView
        android:id="@+id/myoStatusText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/myo_status_disconnected"
        android:layout_below="@+id/btnRecord" />

    <TextView
        android:id="@+id/myoLockedState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/myoStatusText" />

    <Button
        android:id="@+id/btnScan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/myoLockedState"
        android:onClick="selfDestruct"
        android:text="@string/pref_cat_myo" />

    <fragment
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:name="com.realsoft.gopro.ui.fragment.MyoPoseFragment"
        android:id="@+id/myoPoseFragment"
        android:layout_below="@+id/btnScan"
        android:layout_centerHorizontal="true" />

</RelativeLayout>